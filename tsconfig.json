{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}